import { NextRequest, NextResponse } from 'next/server';

// DESARROLLO: Middleware simplificado para mejor performance
export async function middleware(request: NextRequest) {
  // En desarrollo, solo pasar requests sin procesamiento
  if (process.env.NODE_ENV === 'development') {
    return NextResponse.next();
  }

  // En producci칩n, aplicar rate limiting y security
  const { pathname } = request.nextUrl;
  
  // Skip middleware para archivos est치ticos
  if (
    pathname.startsWith('/_next/') ||
    pathname.startsWith('/static/') ||
    pathname.startsWith('/favicon.ico') ||
    pathname.includes('.')
  ) {
    return NextResponse.next();
  }

  // Security headers b치sicos solo en producci칩n
  const response = NextResponse.next();
  
  if (process.env.NODE_ENV === 'production') {
    // Security headers optimizados
    response.headers.set('X-Frame-Options', 'SAMEORIGIN');
    response.headers.set('X-Content-Type-Options', 'nosniff');
    response.headers.set('Referrer-Policy', 'strict-origin-when-cross-origin');
  }

  return response;
}

export const config = {
  matcher: [
    /*
     * Match all request paths except for the ones starting with:
     * - _next/static (static files)
     * - _next/image (image optimization files)
     * - favicon.ico (favicon file)
     * - public folder
     */
    '/((?!_next/static|_next/image|favicon.ico|.*\\.(?:svg|png|jpg|jpeg|gif|webp)$).*)',
  ],
};