rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get user role
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Users:
    // - Admins can read the entire collection.
    // - Any user can create their own user document (signup).
    // - Users can only read/update their own data.
    match /users/{userId} {
      allow list: if getUserRole(request.auth.uid) == 'admin';
      allow create;
      allow read, update: if request.auth.uid == userId || getUserRole(request.auth.uid) == 'admin';
    }

    // Tickets:
    // - Any authenticated user can read their own ticket.
    // - Admins/validators can update tickets.
    match /tickets/{ticketId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if getUserRole(request.auth.uid) in ['admin', 'validator'];
    }
    
    // Orders:
    // - Authenticated users can create their own orders.
    // - Admins/validators can read the collection and update any order.
    match /orders/{orderId} {
      allow list: if getUserRole(request.auth.uid) in ['admin', 'validator'];
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if getUserRole(request.auth.uid) in ['admin', 'validator'];
      allow read: if getUserRole(request.auth.uid) in ['admin', 'validator'];
    }
  }
}
